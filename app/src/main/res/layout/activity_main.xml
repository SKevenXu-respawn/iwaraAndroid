<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 1. 搜索栏 -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:navigationIcon="@mipmap/menu"
            app:contentInsetStartWithNavigation="0dp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/home_searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:queryHint="搜索内容"
                app:iconifiedByDefault="true"
                />
        </com.google.android.material.appbar.MaterialToolbar>

        <!-- 2. 卡片切换栏 -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/home_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabTextColor="@android:color/black"
            app:tabMode="fixed"
            app:tabGravity="fill" />

        <!-- 3. 内容区 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_viewPager2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
    <!-- 2. 侧边栏（NavigationView 或任意布局） -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        android:background="@drawable/bg_drawer_white"
        app:shapeAppearance="@style/ShapeAppearance.Drawer.White"
        app:menu="@menu/nav_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>
