<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"

                android:background="#F4F4F4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:background="@color/white"
                android:paddingTop="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="16dp"
                        android:id="@+id/home_tag_list"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_weight="1"
                        android:id="@+id/home_tag_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/home_nav_btn"
                    android:background="@mipmap/select"
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_recyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
        <!-- 2. 侧边栏（NavigationView 或任意布局） -->
        <LinearLayout
            android:id="@+id/home_nav_view"
            android:layout_width="250dp"
            android:layout_gravity="end"
            android:background="#F4F4F4"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RadioGroup
                android:layout_gravity="center_horizontal"
                android:id="@+id/radioGroup"
                android:layout_margin="16dp"
                android:background="@drawable/radio_bg"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbHot"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="热门视频"/>

                <RadioButton
                    android:id="@+id/rbPopular"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="人气视频"/>

                <RadioButton
                    android:id="@+id/rbNew"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="最新视频"/>
            </RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="过滤器"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_tag_selected_list"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_height="30dp"/>
            <SearchView
                android:id="@+id/home_tag_search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:queryHint="搜索关键词"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/home_tag_search_result_list"
                android:layout_width="match_parent"
                android:padding="16dp"
                tools:spanCount="3"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>


