<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 透明窗口 + 无系统标题栏 -->
    <style name="Base.Theme.IwaraAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 窗口背景透明 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>

        <!-- 状态栏/导航栏颜色由代码控制，这里先置空 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- 让系统根据背景亮度自动反转图标颜色（Material3 支持） -->
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="Theme.IwaraAndroid" parent="Base.Theme.IwaraAndroid" />



    <style name="ShapeAppearance.Drawer.White" parent="">
        <!-- 四个角全部 0dp，即直角 -->
        <item name="cornerSize">0dp</item>
    </style>




    <!-- 正常黑白状态栏 + 无标题栏 -->
    <style name="AppTheme.NoActionBar.NonImmersive" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 状态栏颜色：黑/白跟随系统 -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- 导航栏同样不透明 -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- 确保不沉浸式 -->
        <item name="android:windowFullscreen">false</item>
    </style>



</resources>